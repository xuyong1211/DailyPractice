<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_wechat"
        />
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_close"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/iv_share1"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        style="@style/Widget.AppCompat.Light.PopupMenu"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="286dp"
            android:layout_height="430dp"
            >
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/ic_weibo"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>


    <ImageView
        android:id="@+id/iv_share1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_share2"
        android:src="@drawable/ic_qq"
        android:layout_marginBottom="40dp"
        />
    <ImageView
        android:id="@+id/iv_share2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_share1"
        app:layout_constraintEnd_toStartOf="@id/iv_share3"
        android:src="@drawable/ic_wechat"
        android:layout_marginBottom="40dp"

        />
    <ImageView
        android:id="@+id/iv_share3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_share2"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_zone"
        android:layout_marginBottom="40dp"

        />
</androidx.constraintlayout.widget.ConstraintLayout>