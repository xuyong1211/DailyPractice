<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/cl_content"
    app:layoutDescription="@xml/motion_secsion"
    >

    <TextView
        android:id="@+id/tv_hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="parent"
        android:background="@color/teal_200"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        />

    <ImageView
        android:id="@+id/iv_gif"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="@id/tv_hello"
        app:layout_constraintEnd_toEndOf="@id/tv_hello"
        app:layout_constraintTop_toBottomOf="@id/tv_hello"
        android:layout_marginTop="20dp"
        />

    <ImageView
        android:id="@+id/iv_animation"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="@id/iv_gif"
        app:layout_constraintEnd_toEndOf="@id/iv_gif"
        app:layout_constraintTop_toBottomOf="@id/iv_gif"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_wechat"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="parent"
        >
        <ImageView
            android:id="@+id/iv_animation_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_wechat"
            android:layout_marginBottom="40dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.motion.widget.MotionLayout>